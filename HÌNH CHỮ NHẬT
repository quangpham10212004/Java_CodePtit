import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner in = new Scanner(System.in);
        int a= in.nextInt() , b= in.nextInt();
        if(a <= 0 || b <=0){
            System.out.println(0);
        }
        else{
            int P = (a+b)*2;
            int S=a*b;
            System.out.println(P + " " + S);
        }
        in.close();

        
    }
}
